<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{APP_NAME}}</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
      .card { transition: transform 0.3s, box-shadow 0.3s; } .card:hover {
      transform: translateY(-5px); box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2); }
    </style>
    <style>
      .service-img { width: 200px; height: 200px; object-fit: contain; }
    </style>
  </head>
  <body>
    {{> header}}
    {{> hero}}
    {{> about}}
    {{> services}}
    {{> contact}}
    {{> owners}}
    {{> footer}}
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    ></script>

    <script>
      function showImageModal(imageUrl) { Swal.fire({ imageUrl: imageUrl,
      imageWidth: 600, imageHeight: 400, imageAlt: 'Owner Image',
      showConfirmButton: false }); }
    </script>

  </body>
</html>